<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?xml-stylesheet type="text/css" href="style.css"?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vue.CtrlAccueil">
   <children>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <Label stylesheets="@style.css" text="Recherchez une personne">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER_RIGHT" prefWidth="68.0" stylesheets="@style.css" text="NOM :" />
                  <TextField fx:id="txtNom" styleClass="text-field" stylesheets="@style.css" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="PRENOM :" />
                  <TextField fx:id="txtPrenom" styleClass="text-field" stylesheets="@style.css" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Label alignment="CENTER" text="OU">
         <font>
            <Font size="32.0" />
         </font>
      </Label>
      <VBox alignment="TOP_CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Choisisez une table">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <ComboBox fx:id="listeTable" maxHeight="32.0" minHeight="32.0" prefHeight="32.0" prefWidth="150.0" styleClass="combo-box" stylesheets="@style.css" />
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="20.0">
         <children>
            <Button fx:id="bnAnnuler" mnemonicParsing="false" onAction="#fermerProgramme" prefWidth="100.0" stylesheets="@style.css" text="ANNULER" />
            <Button fx:id="bnValider" mnemonicParsing="false" onAction="#ouvrirFenetre" prefWidth="100.0" styleClass="bnValider" stylesheets="@style.css" text="VALIDER" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
